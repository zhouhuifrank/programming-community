<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frankzhou.community.mapper.OssFileMapper">

    <resultMap id="fileMap" type="com.frankzhou.community.model.entity.OssFile">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="businessType" column="business_type" jdbcType="INTEGER"/>
            <result property="businessId" column="business_id" jdbcType="BIGINT"/>
            <result property="businessNo" column="business_no" jdbcType="VARCHAR"/>
            <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
            <result property="fileType" column="file_type" jdbcType="INTEGER"/>
            <result property="fileCategory" column="file_category" jdbcType="VARCHAR"/>
            <result property="reserveDay" column="reserve_day" jdbcType="INTEGER"/>
            <result property="bucket" column="bucket" jdbcType="VARCHAR"/>
            <result property="filePath" column="file_path" jdbcType="VARCHAR"/>
            <result property="fileId" column="file_id" jdbcType="VARCHAR"/>
            <result property="fileUrl" column="file_url" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="queryColumn">
        id,user_id,business_type,business_id,business_no,file_name,
        file_type,file_category,reserve_day,bucket,file_path,file_id,
        file_url,create_time,update_time,status
    </sql>

    <!-- Integer batchDelete(List<String> filePath) -->
    <delete id="batchDelete" parameterType="java.util.List">
        delete from oss_file
        where
        file_path in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- Integer batchInvalidate(List<String> filePath) -->
    <update id="batchInvalidate" parameterType="java.util.List">
        update oss_file
        set `status` = 'DELETED'
        where
        file_path in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <!-- List<OssFile> getExpireFileList() -->
    <select id="getExpireFileList" resultMap="fileMap">
    </select>

</mapper>
